<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
    <TextView
        android:id="@+id/howToPlayGame1"
        style="@style/MenuFont"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100dp"
        android:gravity="center"
        android:text="@string/howToPlayGame1" />
    
    <ImageView
        android:id="@+id/howToImage1"
        android:contentDescription="@string/howToImage1"
        android:src="@drawable/how_to"
        android:layout_below="@+id/howToPlayGame1"
		android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>
            
    <TextView
        android:id="@+id/howToPlayGame2"
        style="@style/MenuFont"
        android:layout_below="@+id/howToImage1"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100dp"
        android:gravity="center"
        android:text="@string/howToPlayGame2" />
    
    <ImageView
        android:id="@+id/howToImage2"
        android:contentDescription="@string/howToImage2"
        android:src="@drawable/start"
        android:layout_below="@+id/howToPlayGame2"
		android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>
    
     <TextView
        android:id="@+id/howToPlayGame3"
        style="@style/MenuFont"
        android:layout_below="@+id/howToImage2"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100dp"
		android:gravity="center"
        android:text="@string/howToPlayGame3" />
    
    <ImageView
        android:id="@+id/howToImage3"
        android:contentDescription="@string/howToImage3"
        android:src="@drawable/goal"
        android:layout_below="@+id/howToPlayGame3"
		android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>
    </RelativeLayout>
</ScrollView>